---
interface Props {
  city?: string;
}

const { city } = Astro.props;
const title = city 
  ? `Lleva tu restaurante en ${city} al siguiente nivel`
  : "Lleva tu carta al siguiente nivel";
const subtitle = city
  ? `Ãšnete a los restaurantes de ${city} que ya digitalizaron su carta.`
  : "Te ayudamos a crear una carta digital clara, editable y lista para tus clientes.";
---

<section class="py-12 md:py-16 px-6 bg-[var(--color-accent)] text-white">
  <div class="max-w-3xl mx-auto text-center">
    <h2 class="text-3xl md:text-4xl font-semibold tracking-tight mb-6">
      {title}
    </h2>

    <p class="text-white/90 mb-10 text-lg">
      {subtitle}
    </p>

    <div class="flex justify-center gap-4 flex-wrap">
      <a
        href="https://wa.me/XXXXXXXXXX"
        class="px-8 py-4 rounded-xl font-medium bg-white text-[var(--color-accent)] hover:bg-white/90 transition"
      >
        Hablar por Whatsapp
      </a>
    </div>
  </div>
</section>
---
import FadeIn from "../ui/FadeIn.astro";

interface Props {
  title?: string;
  subtitle?: string;
  primaryCtaText?: string;
  primaryCtaUrl?: string;
  secondaryCtaText?: string;
  secondaryCtaUrl?: string;
}

const { 
  title = "Tu carta digital, siempre actualizada",
  subtitle = "Crea, edita y comparte el menú de tu restaurante en minutos. Sin reimprimir, sin depender de terceros.",
  primaryCtaText = "Solicitar demo",
  primaryCtaUrl = "/contacto",
  secondaryCtaText = "Ver cómo funciona",
  secondaryCtaUrl = "/quienes-somos"
} = Astro.props;
---
<section class="py-12 md:py-16 px-6 max-w-7xl mx-auto">

  <div class="flex flex-col gap-12 md:grid md:grid-cols-2 md:items-center md:gap-16">

    <!-- Texto -->
    <div>
        <FadeIn>
            <h1 class="text-3xl sm:text-4xl md:text-5xl font-semibold tracking-tight mb-5">
                {title}
            </h1>
        </FadeIn>

      <p class="text-base sm:text-lg text-muted max-w-xl mb-8">
        {subtitle}
      </p>

      <!-- CTAs -->
      <div class="relative z-10 flex flex-col sm:flex-row gap-3">
        <a
          href={primaryCtaUrl}
          class="btn-primary text-center px-6 py-3 rounded-lg font-medium transition"
        >
          {primaryCtaText}
        </a>

        <a
          href={secondaryCtaUrl}
          class="text-center px-6 py-3 rounded-lg border border-default hover:bg-[var(--color-bg-soft)] transition"
        >
          {secondaryCtaText}
        </a>
      </div>
    </div>

    <!-- Mockup -->
    <div class="relative flex justify-center">
      <div class="absolute inset-0 bg-[var(--color-accent-soft)] rounded-3xl blur-3xl opacity-60 -z-10"></div>

      <img
        src="/images/hero/menu-mockup.png"
        alt="Carta digital MenuPro en celular"
        class="w-[260px] sm:w-[300px] md:w-[340px] shadow-xl rounded-3xl"
        loading="eager"
      />
    </div>

  </div>
</section>
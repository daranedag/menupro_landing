---
interface BreadcrumbItem {
  label: string;
  href?: string;
}

interface Props {
  items: BreadcrumbItem[];
}

const { items } = Astro.props;
---

<nav aria-label="Breadcrumb" class="max-w-7xl mx-auto px-6 py-3">
  <ol class="flex flex-wrap items-center gap-2 text-sm text-muted">
    {items.map((item, index) => (
      <li class="flex items-center gap-2">
        {item.href ? (
          <a 
            href={item.href}
            class="hover:text-[var(--color-accent)] transition"
          >
            {item.label}
          </a>
        ) : (
          <span class="font-medium text-[var(--color-text)]">{item.label}</span>
        )}
        
        {index < items.length - 1 && (
          <span class="text-muted">â†’</span>
        )}
      </li>
    ))}
  </ol>
</nav>
